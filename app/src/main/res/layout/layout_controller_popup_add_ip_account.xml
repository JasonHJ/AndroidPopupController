<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/padding_s">

        <EditText
            android:id="@+id/et_class_name_add_ip_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_xs"
            android:background="@android:drawable/editbox_dropdown_light_frame"
            android:hint="班级名称:"
            android:inputType="text"
            android:maxLines="1"
            android:padding="@dimen/padding_s"
            android:textColor="@color/text_dark_1"
            android:textSize="@dimen/text_size_subhead" />

        <EditText
            android:id="@+id/et_ip_address_add_ip_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_xs"
            android:background="@android:drawable/editbox_dropdown_light_frame"
            android:hint="IP地址:"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:padding="@dimen/padding_s"
            android:textColor="@color/text_dark_1"
            android:textSize="@dimen/text_size_subhead" />

        <EditText
            android:id="@+id/et_port_number_add_ip_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_xs"
            android:background="@android:drawable/editbox_dropdown_light_frame"
            android:hint="端口号:"
            android:inputType="number"
            android:maxLines="1"
            android:padding="@dimen/padding_s"
            android:textColor="@color/text_dark_1"
            android:textSize="@dimen/text_size_subhead" />

        <Button
            android:id="@+id/btn_add_add_ip_account"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/padding_s"
            android:padding="@dimen/padding_s"
            android:text="添加"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_size_button" />
    </LinearLayout>

</android.support.v7.widget.CardView>